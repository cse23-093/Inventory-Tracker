<Context>
    <Resource
            name="jdbc/InventoryDB"
            auth="Container"
            type="javax.sql.DataSource"
            maxTotal="20"
            maxIdle="10"
            maxWaitMillis="-1"
            username="${env.DB_USER}"
            password="${env.DB_PASS}"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="${env.DB_URL}"/>
</Context>
